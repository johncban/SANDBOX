<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- ════════════════════════════════════════════════════════════ -->
    <!-- ✅ PASSBOOK BACKUP RULES - Exclude sensitive data -->
    <!-- ════════════════════════════════════════════════════════════ -->

    <!-- Include standard app files (required before exclude statements) -->
    <include domain="file" path="." />
    <include domain="database" path="." />
    <include domain="sharedpref" path="." />

    <!-- Exclude encrypted preferences (handled separately by DataStore) -->
    <exclude domain="sharedpref" path="encrypted_prefs" />

    <!-- Exclude cache and temp files -->
    <exclude domain="file" path="cache" />
    <exclude domain="file" path="files/tmp" />

    <!-- Exclude build artifacts and system files -->
    <exclude domain="file" path="no_backup" />
    <exclude domain="database" path="room_master_table" />
</full-backup-content>
