<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme -->
    <style name="Theme.Passbook" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_300</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">#FF121212</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray_800</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <!-- Background -->
        <item name="android:colorBackground">#FF121212</item>

        <!-- Error colors -->
        <item name="colorError">#FFCF6679</item>
        <item name="colorOnError">@color/black</item>
    </style>
</resources>
