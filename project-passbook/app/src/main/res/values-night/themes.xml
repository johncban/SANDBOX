<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Night Theme -->
    <style name="Theme.Passbook" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/material_primary</item>
        <item name="colorOnPrimary">@color/material_on_primary</item>
        <item name="colorPrimaryContainer">@color/material_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/material_on_primary_container</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/material_secondary</item>
        <item name="colorOnSecondary">@color/material_on_secondary</item>
        <item name="colorSecondaryContainer">@color/material_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/material_on_secondary_container</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/material_surface</item>
        <item name="colorOnSurface">@color/material_on_surface</item>
        <item name="colorSurfaceVariant">@color/material_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/material_on_surface_variant</item>

        <!-- Error Colors -->
        <item name="colorError">@color/material_error</item>
        <item name="colorOnError">@color/material_on_error</item>
        <item name="colorErrorContainer">@color/material_error_container</item>
        <item name="colorOnErrorContainer">@color/material_on_error_container</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/material_background</item>
    </style>

    <!-- Alias: This fixes the "resource not found" error in Manifest -->
    <style name="Theme.Material3.DayNight.NoActionBar" parent="Theme.Passbook" />
</resources>
